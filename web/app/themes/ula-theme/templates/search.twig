{% extends "components/base/base.twig" %}

{% block content %}
  <div class="c-home">
    <div class="c-home__inner c-page--{{post.post_type}}" id="post-{{post.ID}}">
      <h2 class="c-home__title">Search for</h2>
      <div class="c-home__description"> '{{ search.query }}' <span>{{ search.count }} results</span></div>

      {% include 'components/search/search-input.twig' with {
        class: 'c-home__search'
      } %}

      {% include 'components/feed/feed.twig' with {
        class: 'c-home',
        items: posts
      } %}

    </div>
  </div>

{% endblock %}
