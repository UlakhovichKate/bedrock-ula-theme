{#
* Button
* --------
* @objects
* @version 2
#}
{% set btn = {
    el     : el     ? el : 'a',
    id     : id     ? 'id="' ~ id ~ '"' : '',
    cta    : cta,
    before : before ? before : '',
    after  : after  ? after : '',
    class  : component(class),
    th     : component(th),
    style  : style  ? style : 'default',
    meta   : meta   ? meta : '',
    link   : link   ? 'href="' ~ link ~ '"' : '',
    target : target ? 'target="_blank"' : '',
    role   : role   ? 'role="' ~ role ~ '"' : '',
} %}
<{{ btn.el }} {{ btn.link }} class="o-btn o-btn--{{ btn.style }}{{ btn.class }}{{ btn.th }}" {{ btn.id }} {{ btn.target }} {{ btn.meta }} {{ btn.role }}>{{ btn.before }}{{ btn.cta }}{{ btn.after }}</{{ btn.el }}>
