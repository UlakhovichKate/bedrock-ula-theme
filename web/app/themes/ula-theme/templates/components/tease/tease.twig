<article class="tease tease--{{post.post_type}}" id="tease-{{post.ID}}" data-animate="fadeUp">
	{% block content %}
		<h2 class="tease__title"><a href="{{post.link}}">{{post.title}}</a></h2>
		<p>{{post.preview}}</p>

		{% if post.get_thumbnail %}
			<img class="tease__img" src="{{post.thumbnail.src}}" />
		{% endif %}
	{% endblock %}
</article>
