<header class="header">
    <div class="header__inner">
        {% include 'objects/logo.twig' %}

        <nav id="mainnav" class="masthead" role="navigation">

            {% include "components/masthead/menu.twig" with {
                items: menu.masthead.get_items,
                class: 'menu'
            } %}

            <template id="burger-template" class="masthead__burger burger">
                <button class="burger__btn" type="button" aria-expanded="false" aria-label="Menu" aria-controls="mainnav">
                    <svg width="24" height="24" aria-hidden="true">
                        <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/>
                    </svg>
                </button>
            </template>
        </nav><!-- #nav -->

        {% include 'objects/button.twig' with {
            el: 'a',
            cta: 'CTA button',
            link: site.link,
            style: 'ghost',
            class: 'header__btn',
            th: 'primary'
        } %}

    </div>
</header>
