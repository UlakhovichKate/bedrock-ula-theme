<div class="footer">
    <div class="footer__inner">

        <div class="footer__columns">
            <div class="footer__column-one">
                <div class="footer__column-inner">
                    <div class="footer__menu">
                        {% for item in menu.foundation.items %}
                            <a href="{{ item.link }}" class="footer__menu-link {{ item.classes | join(' ')}}">
                                {{ item.name }}
                            </a>
                        {% endfor %}
                    </div>

                    <div class="footer__bar">
                        <div class="footer__bar-container">
                            <div class="footer__bar-copyrights">
                                Copyright Â© {{ 'now'|date('Y') }} {{ site.name }}.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer__column-two">
                {% include 'components/pages/newsletter.twig' %}
            </div>
            <div class="footer__column-three">
                {% include 'objects/logo.twig' %}

                <div class="contact">
                    <h3 class="contact__title">{{ contacts.title }}</h3>
                    <div class="contact__text">{{ contacts.address }}</div>
                    <div class="contact__text">
                        <a href="{{ contacts.email }}" class="contact__link footer__menu-link">{{ contacts.email }}</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
